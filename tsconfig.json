{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "strict": true,
        "declaration": true,
        "outDir": "./lib",
        "sourceMap": true,
        "noLib": false,
        "moduleResolution": "node",
        "removeComments": false,
        "stripInternal": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true
    },
    "paths": {
        "core/*": [ "src/core/*" ],
        "plugins/*": [ "src/plugins/*" ]
    },
    "include": [
        "./src/**/*"
    ]
}
